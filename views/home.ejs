  <script>
    // JavaScript

    document.addEventListener("DOMContentLoaded", function() {
  const leftArrow = document.querySelector(".left-arrow");
  const rightArrow = document.querySelector(".right-arrow");
  const testimonies = document.querySelectorAll(".testimony");
  let currentTestimonyIndex = 0;

  // Function to show the current testimony
  function showTestimony() {
    testimonies.forEach((testimony, index) => {
      if (index === currentTestimonyIndex) {
        testimony.style.display = "block";
      } else {
        testimony.style.display = "none";
      }
    });
  }

  // Initial display
  showTestimony();

  // Event listener for right arrow
  rightArrow.addEventListener("click", function() {
    currentTestimonyIndex = (currentTestimonyIndex + 1) % testimonies.length;
    showTestimony();
  });

  // Event listener for left arrow
  leftArrow.addEventListener("click", function() {
    currentTestimonyIndex = (currentTestimonyIndex - 1 + testimonies.length) % testimonies.length;
    showTestimony();
  });

  // Function to toggle background images
  const firstSection = document.querySelector(".first-section");
  function toggleBackgroundImages() {
    if (firstSection.classList.contains("second-image")) {
      firstSection.classList.remove("second-image");
      firstSection.classList.add("third-image");
    } else if (firstSection.classList.contains("third-image")) {
      firstSection.classList.remove("third-image");
    } else {
      firstSection.classList.add("second-image");
    }
  }

  // Call the function at a set interval for continuous transition
  setInterval(toggleBackgroundImages, 8000); // Change background every 8 seconds
});

  </script>
